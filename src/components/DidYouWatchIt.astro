---
// DidYouWatchIt.astro - Next-day follow-up prompt

import { supabase, getPosterUrl } from '../lib/supabase';

interface Props {
  userId: string;
}

const { userId } = Astro.props;

// Get yesterday's started-but-not-finished watches
const yesterday = new Date(Date.now() - 24 * 60 * 60 * 1000);
const yesterdayStart = new Date(yesterday.setHours(0, 0, 0, 0)).toISOString();
const yesterdayEnd = new Date(yesterday.setHours(23, 59, 59, 999)).toISOString();

const { data: pendingWatches } = await supabase
  .from('user_watch_history')
  .select('id, tmdb_id, watched_on_provider, started_at, movie_id')
  .eq('user_id', userId)
  .eq('status', 'started')
  .gte('started_at', yesterdayStart)
  .lte('started_at', yesterdayEnd)
  .order('started_at', { ascending: false })
  .limit(1);

let pendingWatch: any = null;
if (pendingWatches && pendingWatches.length > 0) {
  const pw = pendingWatches[0];
  const { data: movie } = await supabase
    .from('movies')
    .select('title, poster_path, year')
    .eq('id', pw.movie_id)
    .single();
  
  if (movie) {
    pendingWatch = { ...pw, movie };
  }
}
---

{pendingWatch && (
  <div 
    id="did-you-watch-prompt"
    class="fixed bottom-4 left-4 right-4 md:left-auto md:right-4 md:w-96 z-40"
  >
    <div class="bg-gw-card border border-gw-border rounded-2xl p-4 shadow-2xl relative">
      
      <button 
        class="absolute top-2 right-2 text-gw-text-secondary hover:text-white transition p-1"
        id="close-watch-prompt"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <div class="flex gap-4 pr-6">
        <img 
          src={getPosterUrl(pendingWatch.movie.poster_path, 'w92')}
          alt={pendingWatch.movie.title}
          class="w-16 h-24 rounded-lg object-cover flex-shrink-0"
        />
        
        <div class="flex-1 min-w-0">
          <p class="text-sm text-gw-text-secondary mb-1">Last night</p>
          <h3 class="font-semibold truncate mb-3">{pendingWatch.movie.title}</h3>
          
          <p class="text-sm mb-3">Did you end up watching it?</p>
          
          <div class="flex gap-2" id="watch-response-buttons">
            <button 
              class="flex-1 px-3 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm font-medium transition"
              data-response="finished"
            >
              Yes ‚úì
            </button>
            <button 
              class="flex-1 px-3 py-2 bg-gw-border hover:bg-gw-text-secondary/20 rounded-lg text-sm font-medium transition"
              data-response="abandoned"
            >
              No
            </button>
          </div>
        </div>
      </div>
      
      <!-- Reaction follow-up -->
      <div id="reaction-followup" class="hidden mt-4 pt-4 border-t border-gw-border">
        <p class="text-sm mb-3">Was it worth it?</p>
        <div class="flex gap-2">
          <button class="flex-1 px-3 py-2 bg-green-600/20 hover:bg-green-600 hover:text-white rounded-lg text-sm transition" data-reaction="loved">
            Loved it üíö
          </button>
          <button class="flex-1 px-3 py-2 bg-gw-bg hover:bg-gw-border rounded-lg text-sm transition" data-reaction="okay">
            It was okay
          </button>
          <button class="flex-1 px-3 py-2 bg-gw-bg hover:bg-gw-border rounded-lg text-sm transition" data-reaction="regret">
            Regret üòï
          </button>
        </div>
      </div>
      
      <!-- Thank you state -->
      <div id="thank-you-state" class="hidden text-center py-4">
        <p class="text-lg">Thanks! üôè</p>
        <p class="text-sm text-gw-text-secondary">This helps me pick better for you.</p>
      </div>
    </div>
  </div>
)}

<script define:vars={{ historyId: pendingWatch?.id, tmdbId: pendingWatch?.tmdb_id, visitorId: userId }}>
  const prompt = document.getElementById('did-you-watch-prompt');
  const responseButtons = document.getElementById('watch-response-buttons');
  const reactionFollowup = document.getElementById('reaction-followup');
  const thankYouState = document.getElementById('thank-you-state');
  
  document.getElementById('close-watch-prompt')?.addEventListener('click', () => prompt?.remove());
  
  document.querySelectorAll('[data-response]').forEach(btn => {
    btn.addEventListener('click', async () => {
      const response = btn.dataset.response;
      
      await fetch('/api/watch-history', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ historyId, tmdbId, userId: visitorId, status: response })
      }).catch(() => {});
      
      if (response === 'finished') {
        responseButtons?.classList.add('hidden');
        reactionFollowup?.classList.remove('hidden');
      } else {
        showThankYou();
      }
    });
  });
  
  document.querySelectorAll('[data-reaction]').forEach(btn => {
    btn.addEventListener('click', async () => {
      await fetch('/api/watch-history', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ historyId, tmdbId, userId: visitorId, reaction: btn.dataset.reaction })
      }).catch(() => {});
      showThankYou();
    });
  });
  
  function showThankYou() {
    responseButtons?.classList.add('hidden');
    reactionFollowup?.classList.add('hidden');
    thankYouState?.classList.remove('hidden');
    setTimeout(() => prompt?.remove(), 2000);
  }
</script>
