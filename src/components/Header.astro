---
interface Props {
  showBack?: boolean;
  backHref?: string;
}

const { showBack = false, backHref = '/' } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gray-900/80 backdrop-blur-md border-b border-gray-800">
  <nav class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
    <div class="flex items-center gap-4">
      {showBack && (
        <a
          href={backHref}
          class="text-gray-400 hover:text-white transition-colors p-2 -ml-2"
          aria-label="Go back"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
      <a href="/" class="text-xl font-bold hover:text-gray-200 transition-colors">
        GoodWatch
      </a>
    </div>

    <div class="flex items-center gap-6">
      <a href="/browse" class="text-gray-400 hover:text-white transition-colors text-sm font-medium hidden sm:block">
        Browse
      </a>
      <a href="/taste" class="text-gray-400 hover:text-white transition-colors text-sm font-medium hidden sm:block">
        Taste Quiz
      </a>
      <a
        href="/taste"
        class="bg-white text-black px-4 py-2 rounded-full text-sm font-bold hover:bg-gray-200 transition-colors"
      >
        Get Started
      </a>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
