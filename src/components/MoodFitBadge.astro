---
/**
 * MoodFitBadge.astro - Visual indicator of mood compatibility
 * 
 * Shows how well a movie fits a mood with:
 * - Color-coded badge (perfect/good/stretch/warning)
 * - Hover tooltip with explanation
 * - Optional emotional bars
 */

interface Props {
  bandLabel: string;
  band: 'perfect' | 'good' | 'stretch' | 'warning';
  explanation?: string;
  warnings?: string[];
  showScore?: boolean;
  score?: number;
}

const { bandLabel, band, explanation, warnings = [], showScore = false, score } = Astro.props;

const badgeColors = {
  perfect: 'bg-green-500/20 text-green-400 border-green-500/30',
  good: 'bg-blue-500/20 text-blue-400 border-blue-500/30',
  stretch: 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30',
  warning: 'bg-red-500/20 text-red-400 border-red-500/30',
};
---

<div class="mood-fit-badge-container relative inline-block group">
  <span class={`inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border ${badgeColors[band]}`}>
    {band === 'perfect' && (
      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
    )}
    {bandLabel}
    {showScore && score !== undefined && (
      <span class="opacity-70">({score})</span>
    )}
  </span>
  
  {(explanation || warnings.length > 0) && (
    <div class="mood-fit-tooltip absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-64 p-3 bg-gw-card border border-gw-border rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-50">
      {explanation && (
        <p class="text-sm text-white mb-2">{explanation}</p>
      )}
      {warnings.length > 0 && (
        <div class="space-y-1">
          {warnings.map(warning => (
            <p class="text-xs text-yellow-400 flex items-center gap-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              {warning}
            </p>
          ))}
        </div>
      )}
      <div class="absolute top-full left-1/2 -translate-x-1/2 border-8 border-transparent border-t-gw-card"></div>
    </div>
  )}
</div>
