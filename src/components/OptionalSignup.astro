---
/**
 * OptionalSignup.astro - Sign up modal with Google/Apple OAuth
 * 
 * Triggers:
 * - After completing taste modal
 * - After saving 2+ movies
 * - After clicking "Refine taste" with existing profile
 * - Explicit "Save my list" click
 * 
 * Tracks:
 * - Modal shown
 * - Skip clicks
 * - OAuth starts
 * - Signup completions
 */
---

<div id="signup-modal" class="fixed inset-0 z-[60] hidden">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/90 backdrop-blur-sm" id="signup-backdrop"></div>
  
  <!-- Modal Content -->
  <div class="relative flex items-center justify-center min-h-screen p-4">
    <div class="bg-gw-card border border-gw-border rounded-2xl max-w-md w-full">
      
      <!-- Header -->
      <div class="p-6 text-center">
        <div class="w-16 h-16 bg-gw-accent/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gw-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold mb-2">Save your progress</h2>
        <p class="text-sm text-gw-text-secondary">
          Keep your recommendations and access them on any device.
        </p>
      </div>
      
      <!-- Auth Options -->
      <div class="p-6 pt-0 space-y-3">
        
        <!-- Google Sign In -->
        <button 
          id="signup-google"
          class="w-full flex items-center justify-center gap-3 bg-white hover:bg-gray-100 text-gray-800 px-4 py-3 rounded-lg font-medium transition"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        </button>
        
        <!-- Apple Sign In -->
        <button 
          id="signup-apple"
          class="w-full flex items-center justify-center gap-3 bg-black hover:bg-gray-900 text-white px-4 py-3 rounded-lg font-medium transition border border-gray-700"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
          </svg>
          Continue with Apple
        </button>
        
        <!-- Email Magic Link -->
        <div id="email-signup-container">
          <button 
            id="show-email-input"
            class="w-full flex items-center justify-center gap-2 bg-gw-bg hover:bg-gw-border border border-gw-border px-4 py-3 rounded-lg font-medium transition"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Continue with Email
          </button>
          
          <!-- Email Input (hidden initially) -->
          <div id="email-input-form" class="hidden mt-3">
            <div class="flex gap-2">
              <input 
                type="email" 
                id="signup-email"
                placeholder="your@email.com"
                class="flex-1 bg-gw-bg border border-gw-border rounded-lg px-4 py-2 text-sm focus:border-gw-accent focus:outline-none"
              />
              <button 
                id="send-magic-link"
                class="bg-gw-accent hover:bg-gw-accent-hover text-gw-bg px-4 py-2 rounded-lg font-medium text-sm transition"
              >
                Send Link
              </button>
            </div>
            <p class="text-xs text-gw-text-secondary mt-2">
              We'll email you a magic link to sign in. No password needed.
            </p>
          </div>
        </div>
        
        <!-- Divider -->
        <div class="relative py-2">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gw-border"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-gw-card px-4 text-xs text-gw-text-secondary">or</span>
          </div>
        </div>
        
        <!-- Skip -->
        <button 
          id="signup-skip"
          class="w-full text-center text-sm text-gw-text-secondary hover:text-white py-2 transition"
        >
          Skip for now
        </button>
        
      </div>
      
      <!-- Footer -->
      <div class="px-6 pb-6">
        <p class="text-xs text-gw-text-secondary text-center">
          Your saved movies and preferences will be preserved.
        </p>
      </div>
      
    </div>
  </div>
</div>

<!-- Email Sent Confirmation -->
<div id="email-sent-toast" class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-green-600 text-white px-6 py-3 rounded-full font-medium shadow-lg transform translate-y-20 opacity-0 transition-all duration-300 z-[70]">
  Check your email for the sign-in link
</div>

<!-- Error Toast -->
<div id="auth-error-toast" class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-red-600 text-white px-6 py-3 rounded-full font-medium shadow-lg transform translate-y-20 opacity-0 transition-all duration-300 z-[70]">
  <span id="auth-error-message">Something went wrong</span>
</div>

<script>
  import { createClient } from '@supabase/supabase-js';
  
  // Initialize Supabase client
  const supabaseUrl = 'https://jdjqrlkynwfhbtyuddjk.supabase.co';
  const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImpkanFybGt5bndmaGJ0eXVkZGprIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQ0NzUwMTEsImV4cCI6MjA4MDA1MTAxMX0.KDRMLCewVMp3lwphkUvtoWOkg6kyAk8iSbVkRKiHYSk';
  const supabase = createClient(supabaseUrl, supabaseKey);
  
  // ============================================
  // ANALYTICS TRACKING
  // ============================================
  
  function getAnonymousId(): string {
    let anonId = localStorage.getItem('goodwatch_anon_id');
    if (!anonId) {
      anonId = 'anon_' + Math.random().toString(36).substring(2, 15);
      localStorage.setItem('goodwatch_anon_id', anonId);
    }
    return anonId;
  }
  
  async function trackAuthEvent(
    eventType: string,
    authProvider?: string,
    triggerReason?: string
  ): Promise<void> {
    try {
      await supabase.from('auth_analytics').insert({
        event_type: eventType,
        auth_provider: authProvider || null,
        trigger_reason: triggerReason || null,
        page_url: window.location.pathname,
        anonymous_id: getAnonymousId(),
        user_agent: navigator.userAgent,
      });
    } catch (error) {
      console.error('Failed to track auth event:', error);
    }
  }
  
  // ============================================
  // MODAL LOGIC
  // ============================================
  
  const SKIP_COOLDOWN = 24 * 60 * 60 * 1000; // 24 hours
  
  let signupShownThisSession = false;
  let currentTriggerReason: string = '';
  
  const modal = document.getElementById('signup-modal');
  const backdrop = document.getElementById('signup-backdrop');
  const skipBtn = document.getElementById('signup-skip');
  const googleBtn = document.getElementById('signup-google');
  const appleBtn = document.getElementById('signup-apple');
  const showEmailBtn = document.getElementById('show-email-input');
  const emailForm = document.getElementById('email-input-form');
  const emailInput = document.getElementById('signup-email') as HTMLInputElement;
  const sendLinkBtn = document.getElementById('send-magic-link');
  const emailSentToast = document.getElementById('email-sent-toast');
  const errorToast = document.getElementById('auth-error-toast');
  const errorMessage = document.getElementById('auth-error-message');
  
  // Check if already signed in
  async function isSignedIn(): Promise<boolean> {
    const { data: { user } } = await supabase.auth.getUser();
    return !!user;
  }
  
  // Check if should show modal
  async function shouldShowModal(): Promise<boolean> {
    if (signupShownThisSession) return false;
    if (await isSignedIn()) return false;
    
    // Check skip cooldown
    const skippedAt = localStorage.getItem('goodwatch_signup_skipped');
    if (skippedAt) {
      const skipped = new Date(skippedAt).getTime();
      if (Date.now() - skipped < SKIP_COOLDOWN) {
        return false;
      }
    }
    
    return true;
  }
  
  // Show modal
  async function showSignupModal(triggerReason: string = 'unknown') {
    if (!(await shouldShowModal())) return;
    
    signupShownThisSession = true;
    currentTriggerReason = triggerReason;
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    // Track modal shown
    await trackAuthEvent('signup_modal_shown', undefined, triggerReason);
  }
  
  // Hide modal
  function hideModal() {
    modal?.classList.add('hidden');
    document.body.style.overflow = '';
  }
  
  // Show toast
  function showToast(toastEl: HTMLElement | null, message?: string) {
    if (!toastEl) return;
    if (message && toastEl.id === 'auth-error-toast' && errorMessage) {
      errorMessage.textContent = message;
    }
    toastEl.classList.remove('translate-y-20', 'opacity-0');
    setTimeout(() => {
      toastEl.classList.add('translate-y-20', 'opacity-0');
    }, 4000);
  }
  
  // Sync local data to user profile
  async function syncLocalData() {
    const { data: { user } } = await supabase.auth.getUser();
    if (!user) return;
    
    const localData = localStorage.getItem('goodwatch_taste');
    if (!localData) return;
    
    const parsed = JSON.parse(localData);
    
    try {
      await supabase.from('users').upsert({
        id: user.id,
        email: user.email,
        taste_profile: parsed.tasteProfile || {},
        saved_movies: parsed.savedMovies || [],
        skipped_movies: parsed.skippedMovies || [],
        updated_at: new Date().toISOString(),
      });
      
      await trackAuthEvent('signup_completed', undefined, currentTriggerReason);
    } catch (error) {
      console.error('Failed to sync data:', error);
    }
  }
  
  // ============================================
  // EVENT HANDLERS
  // ============================================
  
  // Skip
  skipBtn?.addEventListener('click', async () => {
    localStorage.setItem('goodwatch_signup_skipped', new Date().toISOString());
    await trackAuthEvent('signup_skipped', undefined, currentTriggerReason);
    hideModal();
  });
  
  // Backdrop click = skip
  backdrop?.addEventListener('click', async () => {
    localStorage.setItem('goodwatch_signup_skipped', new Date().toISOString());
    await trackAuthEvent('signup_skipped', undefined, currentTriggerReason);
    hideModal();
  });
  
  // Google Sign In
  googleBtn?.addEventListener('click', async () => {
    await trackAuthEvent('signup_started', 'google', currentTriggerReason);
    
    const { error } = await supabase.auth.signInWithOAuth({
      provider: 'google',
      options: {
        redirectTo: `${window.location.origin}/auth/callback`,
      },
    });
    
    if (error) {
      showToast(errorToast, error.message);
    }
  });
  
  // Apple Sign In
  appleBtn?.addEventListener('click', async () => {
    await trackAuthEvent('signup_started', 'apple', currentTriggerReason);
    
    const { error } = await supabase.auth.signInWithOAuth({
      provider: 'apple',
      options: {
        redirectTo: `${window.location.origin}/auth/callback`,
      },
    });
    
    if (error) {
      showToast(errorToast, error.message);
    }
  });
  
  // Show email input
  showEmailBtn?.addEventListener('click', () => {
    showEmailBtn.classList.add('hidden');
    emailForm?.classList.remove('hidden');
    emailInput?.focus();
  });
  
  // Send magic link
  sendLinkBtn?.addEventListener('click', async () => {
    const email = emailInput?.value?.trim();
    
    if (!email || !email.includes('@')) {
      showToast(errorToast, 'Please enter a valid email');
      return;
    }
    
    await trackAuthEvent('signup_started', 'email', currentTriggerReason);
    
    const { error } = await supabase.auth.signInWithOtp({
      email,
      options: {
        emailRedirectTo: `${window.location.origin}/auth/callback`,
      },
    });
    
    if (error) {
      showToast(errorToast, error.message);
    } else {
      hideModal();
      showToast(emailSentToast);
    }
  });
  
  // Enter key in email input
  emailInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      sendLinkBtn?.click();
    }
  });
  
  // ============================================
  // TRIGGER CONDITIONS
  // ============================================
  
  // Listen for taste profile completion
  window.addEventListener('tasteProfileUpdated', () => {
    setTimeout(() => showSignupModal('taste_modal_complete'), 1000);
  });
  
  // Track saved movies count
  let savedMovieCount = 0;
  const tasteData = localStorage.getItem('goodwatch_taste');
  if (tasteData) {
    const parsed = JSON.parse(tasteData);
    savedMovieCount = parsed.savedMovies?.length || 0;
  }
  
  // Listen for movie saves
  document.addEventListener('click', async (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('[data-save-movie]') || target.closest('.save-movie-btn')) {
      savedMovieCount++;
      if (savedMovieCount >= 2) {
        setTimeout(() => showSignupModal('saved_movies'), 1000);
      }
    }
  });
  
  // Listen for refine taste clicks
  document.addEventListener('click', async (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('#refine-taste-btn')) {
      const tasteData = localStorage.getItem('goodwatch_taste');
      if (tasteData) {
        const parsed = JSON.parse(tasteData);
        if (parsed.tasteProfile?.likedMovies?.length > 0) {
          setTimeout(() => showSignupModal('refine_taste'), 500);
        }
      }
    }
  });
  
  // Listen for explicit signup trigger
  document.querySelectorAll('[data-trigger-signup]').forEach(el => {
    el.addEventListener('click', () => {
      showSignupModal('explicit_click');
    });
  });
  
  // ============================================
  // AUTH STATE LISTENER
  // ============================================
  
  supabase.auth.onAuthStateChange(async (event, session) => {
    if (event === 'SIGNED_IN' && session?.user) {
      await syncLocalData();
      hideModal();
    }
  });
</script>
