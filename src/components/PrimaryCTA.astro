---
// PrimaryCTA.astro - ONE dominant action above the fold
// Solves: Decision paralysis, too many equal choices
---

<section class="primary-cta-section py-8">
  <div class="max-w-2xl mx-auto text-center px-4">
    
    <!-- Headline -->
    <h1 class="text-3xl md:text-4xl font-bold mb-4">
      Stop scrolling.<br/>
      <span class="text-gw-accent">Decide what to watch.</span>
    </h1>
    
    <p class="text-gw-text-secondary text-lg mb-8">
      Get one great recommendation in 30 seconds.
    </p>
    
    <!-- Primary CTA -->
    <a 
      href="/tonight" 
      class="inline-flex items-center gap-3 bg-gw-accent hover:bg-gw-accent-hover text-gw-bg px-8 py-4 rounded-full font-bold text-lg transition transform hover:scale-105 shadow-lg shadow-gw-accent/30"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Pick something for tonight
    </a>
    
    <!-- Secondary option -->
    <div class="mt-6">
      <button 
        id="surprise-me-btn"
        class="text-gw-text-secondary hover:text-gw-accent transition text-sm underline underline-offset-4"
      >
        or surprise me
      </button>
    </div>
    
    <!-- Trust signals near CTA -->
    <div class="flex items-center justify-center gap-6 mt-8 text-xs text-gw-text-secondary">
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        No login required
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        Uses IMDb + taste data
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        Built to stop scrolling
      </span>
    </div>
    
  </div>
</section>

<script>
  document.getElementById('surprise-me-btn')?.addEventListener('click', () => {
    // Random mood selection
    const moods = ['feel-good', 'thrilling', 'mind-bending', 'nostalgic', 'romantic'];
    const randomMood = moods[Math.floor(Math.random() * moods.length)];
    window.location.href = `/mood/${randomMood}`;
  });
</script>
