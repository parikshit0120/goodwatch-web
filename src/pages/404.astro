---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - GoodWatch" noIndex={true}>
  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-8xl font-bold mb-4">404</h1>
      <p class="text-2xl text-gray-400 mb-8">This page doesn't exist.</p>
      <p class="text-gray-500 mb-8">
        Maybe the movie you're looking for is elsewhere?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="bg-white text-black px-8 py-4 rounded-full font-bold hover:bg-gray-200 transition-colors"
        >
          Go Home
        </a>
        <a
          href="/browse"
          class="border border-gray-600 px-8 py-4 rounded-full font-medium hover:border-gray-400 transition-colors"
        >
          Browse Movies
        </a>
      </div>
    </div>
  </main>
</Layout>
